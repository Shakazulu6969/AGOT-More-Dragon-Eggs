widget = {
	allow_outside = yes
	name = "mde_hatching_egg_selection"
	size = { 440 270 } # Size of the insert inside the event window; needs to fit under the text box since a margin will only push the content and not the widget
	vbox = {
		allow_outside = yes
		layoutpolicy_horizontal = expanding
		layoutpolicy_vertical = expanding
		position = { 0 0 } # Pushes the box around
		datacontext = "[GetPlayer.MakeScope]"
		margin = {0 5 }
		

		scrollbox = {
			
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding

			blockoverride "scrollbox_content"
			{
				vbox = {
					datamodel = "[GetPlayer.MakeScope.GetList('possible_artifacts')]"
					layoutpolicy_horizontal = expanding

					item = {
						button_standard = {
							size = { 440 90 } # Size of the button frame borders; needs to fit within the widget size
							max_width = 400
							datacontext = "[Scope.Artifact]"
							down = "[GetScriptedGui( 'agot_artifact_selecting' ).IsShown( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'selected_artifact', Artifact.MakeScope ).End )]"
							onclick = "[GetScriptedGui( 'agot_artifact_selecting' ).Execute( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'selected_artifact', Artifact.MakeScope ).End )]"

							hbox = {
								widget = {
									size = { 80 80 }
									alwaystransparent = yes
									button_artifact = {
										size = { 100% 100% }
									}
								}

								vbox = {
									layoutpolicy_horizontal = expanding
									layoutpolicy_vertical = expanding
									margin_top = 9

									hbox = {
										layoutpolicy_horizontal = expanding
										text_single = {
											layoutpolicy_horizontal = expanding
											text = "[Artifact.GetRarityAndSlotType]"
											max_width = 300
											using = Font_Size_Small
										}
									}

									hbox = {
										layoutpolicy_horizontal = expanding
										text_multi = {
											layoutpolicy_horizontal = expanding
											text = "[Artifact.GetNameNoTooltip]"
											max_width = 350
											using = Font_Size_Medium
											default_format = "#high"
											autoresize = yes
										}
										
									}
									
									hbox = {
										
										text_single = {
											margin = { -120 0 }
											name = "embryo"
											#visible = "[GetScriptedGui('mde_egg_has_embryo').IsShown( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'gui_egg', Artifact.MakeScope ).End)]"
											text = "mde_this_dragon_will_hatch_this"
											max_width = 350
											using = Font_Size_Tiny
											default_format = "#high"
											autoresize = yes
										}
									}
									
									expand = {}
								}
								
								
								hbox = {
									layoutpolicy_horizontal = expanding
									layoutpolicy_vertical = expanding
									expand = {}
								}
							}
							hbox = {
								layoutpolicy_horizontal = expanding
								expand = {}
								vbox = {
									margin_left = 260
									layoutpolicy_horizontal = preferred
									spacing = 10
									button_checkbox_label = {
										name = "remove_kg_checkbox"
										visible = "[GetScriptedGui('mde_egg_select_use_checkbox_sgui').IsShown( GuiScope.SetRoot( GetPlayer.MakeScope ).End )]"
										onclick = "[GetScriptedGui('mde_egg_select_sgui').Execute( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'gui_egg', Artifact.MakeScope ).End )]"
									
										blockoverride "checkbox" {
											checked = "[GetScriptedGui('mde_egg_select_sgui_checkbox').IsValid( GuiScope.SetRoot( GetPlayer.MakeScope ).AddScope( 'gui_egg', Artifact.MakeScope ).End )]"	
										}
										blockoverride "text" {
											text = mde_include_egg
											using = Font_Size_Small
										}
									}
								}
							}
						}
						
					}
					expand = {}
				}
			}
		}
	}
}